@page
@model MascotaFeliz.App.Frontend.Pages.AgregarMascotasModel
@{
}
<main class="contenedor sombra">
        <h2>Registro Mascota</h2>

    <div class="contenido">
        <form action="" class="formulario" method="post">
            <div class="campos">
                <input type="hidden" asp-for="mascota.Id">
                <div class="campo">
                    <label for="nombre" class="campo__label">Nombre:</label>
                    <input type="text" class="campo__texto2" id="nombre" asp-for="mascota.Nombre" tabindex="1">
                </div>

                <div class="campo">
                    <label for="color" class="campo__label">Color:</label>
                    <input type="text" class="campo__texto2" id="color" asp-for="mascota.Color" tabindex="2">
                </div>

                <div class="campo">
                    <label for="especie" class="campo__label">Especie:</label>
                    <input type="text" class="campo__texto2" id="especie" asp-for="mascota.Especie" tabindex="3">
                </div>

                <div class="campo">
                    <label for="raza" class="campo__label">Raza:</label>
                    <input type="text" class="campo__texto2" id="raza" asp-for="mascota.Raza" tabindex="4">
                </div>
            </div>
            <div>
                <input class="boton" type="submit" value="Guardar">

            </div>
        </form>

    </div>

</main>