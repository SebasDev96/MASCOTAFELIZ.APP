@page
@model MascotaFeliz.App.Frontend.Pages.EliminarMascotaModel
@{
}

<main class="contenedor sombra">
    <div class="titulo">
        <img class="titulo__imagen" src="@Url.Content("~/img/huella.svg")" alt="Huella">
        <h2>Eliminar Mascota</h2>
        <img class="titulo__imagen" src="@Url.Content("~/img/huella.svg")" alt="Huella">
    </div>
    <div class="contenido">
        <form action="" class="formulario" method="post">
            <div class="campos">
                <input type="hidden" asp-for="mascota.Id">
                <div class="campo">
                    <label for="nombre" class="campo__label">Nombre:</label>
                    <input type="text" class="campo__texto" id="nombre" asp-for="mascota.Nombre" tabindex="1" readonly>
                </div>

                <div class="campo">
                    <label for="color" class="campo__label">Color:</label>
                    <input type="text" class="campo__texto" id="color" asp-for="mascota.Color" tabindex="2" readonly>
                </div>

                <div class="campo">
                    <label for="especie" class="campo__label">Especie:</label>
                    <input type="text" class="campo__texto" id="especie" asp-for="mascota.Especie" tabindex="3" readonly>
                </div>

                <div class="campo">
                    <label for="raza" class="campo__label">Raza:</label>
                    <input type="text" class="campo__texto" id="raza" asp-for="mascota.Raza" tabindex="4" readonly>
                </div>
            </div>
            <div class="contenedor">
                <input class="boton" type="submit" value="Eliminar">

            </div>
        </form>
        <div class="imagenMascota"></div>
    </div>

</main>